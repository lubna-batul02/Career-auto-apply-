from selenium import webdriver
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time, random 

def human_delay(a=3,b=7):
    time.sleep(random.uniform(a,b)) 
#step 1
driver=webdriver.Chrome()
#navigate link
driver.get("https://in.linkedin.com/")
driver.maximize_window()
time.sleep(3)

#interact with button

join_button=WebDriverWait(driver,10).until(
    EC.element_to_be_clickable((By.XPATH,"//a[contains(text(),'Join')]"))
)
join_button.click()
print("signup successfully") 

#auto filling of username, password

email_box=WebDriverWait(driver,10).until(
    EC.presence_of_element_located((By.ID,"email-or-phone") )
)
email_box.send_keys("lubnabatul02@gmail.com")
human_delay()


password=WebDriverWait(driver,10).until(
    EC.presence_of_element_located((By.ID,"password") )
)
password.send_keys("2qvyrdzuu")
human_delay()


signup_button=WebDriverWait(driver,10).until(
    EC.presence_of_element_located((By.ID,"join-form-submit"))
)
signup_button.click()

WebDriverWait(driver, 15).until(EC.url_contains("signup"))


#next module- filling name
first_name=WebDriverWait(driver,10).until(
    EC.element_to_be_clickable((By.NAME,"first-name"))
)
first_name.send_keys("Lubna")
human_delay()


last_name=WebDriverWait(driver,10).until(
    EC.element_to_be_clickable((By.NAME,"last-name"))
)
last_name.send_keys("Batul")
human_delay()

time.sleep(10)
submit=WebDriverWait(driver,10).until(
    EC.element_to_be_clickable((By.NAME,"Continue"))
)
submit.click()
human_delay()

print("filled successfully")



